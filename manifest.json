{
  "manifest_version": 2,

  "name": "SwagMeIn",
  "description": "This extension adds saved credentials to swagger api",
  "version": "1.0",

  "background": {
    "scripts": ["javascript/background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "images/swag-me-in-icon.png",
    "default_title": "Add api credentials"
  },

  "content_scripts": [
    {
      "matches": ["http://*/documentator/v*.html"],
      "js": [
        "javascript/jquery-2.1.4.min.js",
        "javascript/storage-service.js",
        "javascript/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "declarativeContent"
  ],

  "icons" : {
    "48" : "images/swag-me-icon-48.png",
    "128" : "images/swag-me-icon-128.png"
  }
}
